<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>
<div class="container">
<!-- <p id="notice"><%= notice %></p> -->

<h1>Appointments</h1>
<p>has_many:through Association</p>

<%= link_to '<i class="glyphicon glyphicon-pencil"></i>New Appointment'.html_safe, new_appointment_path, class: "btn btn-primary" %>
<div class="table-responsive">  
<table class="table">
  <thead>
    <tr>
      <th>Appointment ID</th><th>Physician ID</th>
      <th>Patient ID</th>
      <th>Appointment date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.id %></td>
        <td><%= appointment.physician_id %></td>
        <td><%= appointment.patient_id %></td>
        <td><%= appointment.appointment_date %></td>
        <td><%= link_to '<i class="glyphicon glyphicon-share">Show'.html_safe, appointment %></td>
        <td><%= link_to '<i class="glyphicon glyphicon-edit">Edit'.html_safe, edit_appointment_path(appointment) %></td>
        <td><%= link_to '<i class="glyphicon glyphicon-trash">Destroy'.html_safe, appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to '<i class="glyphicon glyphicon-pencil"></i>New Appointment'.html_safe, new_appointment_path, class: "btn btn-primary" %>
</div>