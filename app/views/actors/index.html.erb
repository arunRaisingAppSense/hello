<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>
<!-- <p id="notice"><%= notice %></p> -->

<h1>Actors</h1>
<p>Pollymorphic Association</p>
<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @actors.each do |actor| %>
      <tr>
        <td><%= actor.id %></td>
        <td><%= actor.name %></td>
        <td><%= link_to '<i class="glyphicon glyphicon-share">Show'.html_safe, actor %></td>
        <td><%= link_to '<i class="glyphicon glyphicon-edit">Edit'.html_safe, edit_actor_path(actor) %></td>
        <td><%= link_to '<i class="glyphicon glyphicon-trash">Destroy'.html_safe, actor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<i class="glyphicon glyphicon-pencil"></i>New Actor'.html_safe, new_actor_path, class: "btn btn-primary" %>
