<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>
<!-- <p id="notice"><%= notice %></p> -->

<h1>Films</h1>
<p>Pollymorphic Association</p>
<table class="table table-hover">
  <thead>
    <tr>
      <th> ID </th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @films.each do |film| %>
      <tr>
        <td><%= film.id %></td>
        <td><%= film.name %></td>
        <td><%= link_to '<i class="glyphicon glyphicon-share">Show'.html_safe, film %></td>
        <td><%= link_to '<i class="glyphicon glyphicon-edit">Edit'.html_safe, edit_film_path(film) %></td>
        <td><%= link_to '<i class="glyphicon glyphicon-trash">Destroy'.html_safe, film, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<i class="glyphicon glyphicon-pencil"></i>New Film'.html_safe, new_film_path, class: "btn btn-primary" %>
