<h3>Comments</h3>
<% commentable.comments.each do |comment| %>
    <div class="well">
    	<table>
    	<tr>
        	<td><%= comment.body %></td>
        	<td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %> </td>
        	
    	</tr>
    	</table>
    </div>
<% end %>

