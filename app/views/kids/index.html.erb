<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>
<!-- <p id="notice"><%= notice %></p> -->

<h1>Kids</h1>
<p>has_and_belongs_to_many Association</p>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Candies</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kids.each do |kid| %>
      <tr>
        <td><%= kid.name %></td>
        <td><%= kid.candies.map {|c| c.name}.join(', ') %></td>
        <td><%= link_to '<i class="glyphicon glyphicon-share"></i>Show'.html_safe, kid %></td>
        <td><%= link_to '<i class="glyphicon glyphicon-edit">Edit'.html_safe, edit_kid_path(kid) %></td>
        <td><%= link_to '<i class="glyphicon glyphicon-trash">Destroy'.html_safe, kid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<i class="glyphicon glyphicon-pencil"></i>New Kid'.html_safe, new_kid_path, class: "btn btn-primary" %>
